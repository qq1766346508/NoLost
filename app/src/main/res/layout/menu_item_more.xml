<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_view"
    android:gravity="end">

    <TextView
        android:id="@+id/tv_item_delete"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_selector"
        android:drawableStart="@drawable/ic_delete_red_500_18dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="删除"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:layout_marginStart="4dp"
        android:background="#80000000"
        />

    <TextView
        android:id="@+id/tv_item_share"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_selector"
        android:drawableStart="@drawable/ic_share_blue_500_18dp"
        android:gravity="center"
        android:text="分享" />
</LinearLayout>
